---
import JoinWaitlistBtn from "./JoinWaitlistBtn.astro";
---

<form>
  <aside>
    <h5 id="waitlist" class="text-2xl">
      Want to be the first to know when Stumble is ready?
    </h5>
    <JoinWaitlistBtn type='submit'/>
  </aside>
</form>

<style>
  aside {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 3rem;
    border-top: 1px solid var(--gray-800);
    border-bottom: 1px solid var(--gray-800);
    padding: 5rem 1.5rem;
    background-color: var(--gray-999_40);
    box-shadow: var(--shadow-sm);
    text-align: center;
    margin-top: 3vh;
  }


  h5 {
    font-size: var(--text-xl);
    text-align: center;
    max-width: 15ch;
  }

  @media (min-width: 50em) {
    aside {
      padding: 7.5rem;
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: space-between;
    }

    h5 {
      font-size: var(--text-3xl);
      text-align: left;
    }
  }
</style>
